<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_immediate_transfer_kin_stock" model="ir.ui.view">
        <field name="name">stock.immediate.transfer.view.form.kin.stock</field>
        <field name="model">stock.immediate.transfer</field>
        <field name="inherit_id" ref="stock.view_immediate_transfer" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="replace" >
                <form string="No recorded done quantity">
                    <group>
                        <p>You have not recorded <i>done</i> quantities yet</p>
                    </group>
                    <footer>
                        <button string="Close" class="btn-primary" special="cancel"  />
                    </footer>
                </form>
            </xpath>
        </field>
    </record>
</odoo>
