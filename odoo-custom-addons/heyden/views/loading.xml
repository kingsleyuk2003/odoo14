<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <menuitem id="menu_sales_atl" name="Sales/ATL Report" parent="kin_loading.menu_dispatch_operation" sequence="1" action="action_sales_atl_wizard"  />
        <menuitem id="menu_sales_atl_report" name="Sales/ATL Report" parent="sale.menu_sale_report" sequence="2" action="action_sales_atl_wizard"  />

        <menuitem action="purchase.purchase_rfq" id="purchase.menu_purchase_rfq"
            parent="purchase.menu_procurement_management"
            sequence="0"  groups="group_show_default_rfq_menu"  />
        <menuitem action="purchase.purchase_form_action" id="purchase.menu_purchase_form_action" parent="purchase.menu_procurement_management" sequence="6" groups="group_show_default_purchase_menu"  />

        <record id="purchase_form_action_procurement" model="ir.actions.act_window">
            <field name="name">Procurement</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order</field>
            <field name="view_mode">tree,kanban,form,pivot,graph,calendar,activity</field>
            <field name="view_id" ref="purchase.purchase_order_view_tree"/>
            <field name="domain">[('is_purchase','=',False)]</field>
            <field name="search_view_id" ref="purchase.purchase_order_view_search"/>
            <field name="context">{'default_is_procurement': True}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No procurement found. Let's create one!
              </p><p>
                Once you ordered your products to your supplier, confirm your request for quotation and it will turn into a purchase order.
              </p>
            </field>
        </record>
        <menuitem name="Procurement" action="purchase_form_action_procurement" id="menu_purchase_form_action_procurement" parent="purchase.menu_procurement_management" sequence="6" groups="group_show_procurement_menu"/>


         <record id="purchase_form_action_purchase" model="ir.actions.act_window">
            <field name="name">Purchase Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order</field>
            <field name="view_mode">tree,kanban,form,pivot,graph,calendar,activity</field>
            <field name="view_id" ref="purchase.purchase_order_view_tree"/>
            <field name="domain">[('is_purchase','=',True)]</field>
            <field name="search_view_id" ref="purchase.purchase_order_view_search"/>
            <field name="context">{'default_is_purchase': True}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No purchase order found. Let's create one!
              </p><p>
                Once you ordered your products to your supplier, confirm your request for quotation and it will turn into a purchase order.
              </p>
            </field>
        </record>
        <menuitem name="Purchase"  action="purchase_form_action_purchase" id="menu_purchase_form_action_purchase" parent="purchase.menu_procurement_management" sequence="6"  groups="group_show_purchase_menu" />


         <record id="purchase_order_form_heyden" model="ir.ui.view">
            <field name="name">purchase.order.form.heyden</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="kin_loading.purchase_order_form_loading" />
            <field name="arch" type="xml">
                <field name="conv_rate" position="attributes" >
                    <attribute name="groups" >heyden.group_show_purchase_menu</attribute>
                </field>
            </field>
        </record>

    </data>
</odoo>