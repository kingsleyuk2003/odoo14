                                    <field name="name" />
                                    <field name="unit_amount" />
                                    <field name="quantity" />
                                    <field name="total_amount" />
                                    <field name="company"  />
                                    <field name="company_id" invisible="1" options="{'no_open': True, 'no_create': True}"  />
                                     <field name="product_id" string="Expense Type (Account)" groups="account.group_account_user"  options="{'no_open': True, 'no_create': True}"  />
                                     <button name="submit_expenses" states="draft" string="Submit" type="object"  />
                                    <button name="approve_expenses" states="submit" string="Approve" type="object"  groups="kkon_modifications.group_hr_expense_line_manager" />

                                    <button name="audit_approve" states="audit_approve" string="Audited" type="object" class="oe_highlight"  groups="account.group_account_user"  />
                                      <field name="posted_date" groups="account.group_account_user" />
                                    <button name="action_move_create" states="approve" string="Post" type="object" groups="account.group_account_user" class="oe_highlight"/>

                                    <button name="%(hr_expense.hr_expense_refuse_wizard_action)d" states="audit_approve,submit,approve" string="Refuse" type="action"   groups="account.group_account_user,kkon_modifications.group_hr_expense_line_manager"  />
                                    <button name="reset_expenses" states="cancel" string="Reset" type="object" groups="kkon_modifications.group_hr_expense_group_reset" />

<!--                                     <field name="refused_msg" readonly="1" />-->
<!--                                            <field name="refused_by" readonly="1" />-->
<!--                                            <field name="refused_date" readonly="1" />-->
                                    <field name="state" />
                                </tree>
                                <form>
                                    <sheet>
                                        <group col="4">
                                             <field name="refused_msg" readonly="1" />
                                            <field name="refused_by" readonly="1" />
                                            <field name="refused_date" readonly="1" />
                                            <field name="audited_by" readonly="1" />
                                            <field name="audited_date" readonly="1" />
                                            <field name="posted_by" readonly="1" />
                                            <field name="posted_date" readonly="1" />
                                             <field name="paid_by" readonly="1" />
                                            <field name="paid_date" readonly="1" />
                                        </group>
                                    </sheet>
                                     <div class="oe_chatter">
                                        <field name="message_follower_ids" widget="mail_followers"/>
                                        <field name="message_ids" widget="mail_thread"/>
                                    </div>
                                </form>
                            </field>
<!--                             <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">-->
<!--                                <div class="oe_subtotal_footer oe_inline o_td_label">-->
<!--                                    <label for="amount_total" />-->
<!--                                    <button name="button_dummy"-->
<!--                                         string="(update)" type="object" class="oe_edit_only oe_link"/>-->
<!--                                </div>-->
<!--                                <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>-->
<!--                            </group>-->
<!--                            <div class="oe_clear"/>-->

<!--                         <button name="btn_submit_manager"  string="Submit All lines to Manager"  type="object" class="oe_highlight"  />-->

                     </page>
                     </notebook>

                </sheet>
                   <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
               </form>
            </field>
      </record>

