<menuitem id="hr_expense.menu_expense_to_approve" action="hr_expense.action_request_approve_expense" name="To Approve" parent="hr_expense.menu_hr_expense_root" />

        <record id="hr_expense_form_view_rog" model="ir.ui.view">
            <field name="name">hr.expense.form.kkon</field>
            <field name="model">hr.expense</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_form_view" />
            <field name="arch" type="xml">
                    <button name="approve_expenses" position="after" >
                          <button name="audit_approve" states="audit_approve" string="Audit Approve" type="object" class="oe_highlight" />
                           <button name="%(hr_expense.hr_expense_refuse_wizard_action)d" states="audit_approve" string="Refuse" type="action"   />
                    </button>

                <div class="oe_button_box" position="inside" >
                        <button name="action_view_exp_group"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-pencil-square-o"
                                attrs="{'invisible': [('exp_group_count', '=', 0)]}" >
                                <field  name="exp_group_count" widget="statinfo" string="Expense Group" />
                         </button>
                    </div>

                  <field name="state" position="attributes" >
                      <attribute name="statusbar_visible" >draft,submit,post,done</attribute>
                      <attribute name="statusbar_colors" >{"submit":"blue","cancel":"red","audit_approve":"green"}</attribute>
                  </field>

                  <field name="product_id" position="attributes" >
                      <attribute name="string" >Expense Type (Account)</attribute>
                      <attribute name="options" >{'no_open':True,'no_create':True}</attribute>
                  </field>

                <field name="unit_amount" position="attributes" >
                    <attribute name="attrs" >{'readonly': [('state','not in', ['draft','audit_approve'])]}</attribute>
                </field>

                <field name="quantity" position="attributes" >
                    <attribute name="attrs" >{'readonly': [('state','not in', ['draft','audit_approve'])]}</attribute>
                </field>

                 <field name="description" position="attributes" >
                    <attribute name="attrs" >{'readonly': [('state','not in', ['draft'])]}</attribute>
                </field>

                <field name="tax_ids" position="attributes" >
                    <attribute name="groups" >kkon_modifications.group_kkon_other_expense_fields_kkon</attribute>
                </field>

                 <field name="currency_id" position="attributes" >
                    <attribute name="groups" >kkon_modifications.group_kkon_other_expense_fields_kkon</attribute>
                </field>

                <field name="analytic_account_id" position="attributes" >
                    <attribute name="groups" >kkon_modifications.group_kkon_other_expense_fields_kkon</attribute>
                </field>

                <field name="company_id" position="attributes" >
                    <attribute name="attrs" >{'readonly': [('state','not in', ['draft','submit'])]}</attribute>
                    <attribute name="groups" >kkon_modifications.group_kkon_other_expense_fields_kkon</attribute>
                </field>

                <field name="journal_id" position="attributes" >
                    <attribute name="groups" >kkon_modifications.group_kkon_other_expense_fields_kkon</attribute>
                </field>

                <field name="account_move_id" position="attributes" >
                    <attribute name="groups" >kkon_modifications.group_kkon_other_expense_fields_kkon</attribute>
                </field>

                <field name="payment_mode" position="attributes" >
                    <attribute name="groups" >kkon_modifications.group_kkon_other_expense_fields_kkon</attribute>
                </field>

                <field name="bank_journal_id" position="attributes" >
                    <attribute name="groups" >kkon_modifications.group_kkon_other_expense_fields_kkon</attribute>
                </field>

                <field name="employee_id" position="attributes" >
                    <attribute name="groups" >kkon_modifications.group_kkon_other_expense_fields_kkon</attribute>
                </field>

                <label for="payment_mode"  position="attributes"  >
                      <attribute name="groups" >kkon_modifications.group_kkon_other_expense_fields_kkon</attribute>
                </label>

                <field name="company_id" position="after" >
                    <field name="department_manager_id" groups="kkon_modifications.group_kkon_other_expense_fields_kkon" />
                    <field name="line_manager_id"   />
                         <field name="emp_expense_group_aud_id" />
                        <field name="emp_expense_group_acc_id" />
                </field>
            </field>
        </record>


    <!-- Expenses -->

            <record id="hr_expense_kkon_tree" model="ir.ui.view">
            <field name="name">kkon.hr.expense.tree</field>
            <field name="model">hr.expense</field>
            <field name="arch" type="xml">
                <tree string="Expenses" decoration-warning="state=='draft'" editable="top" create="0" delete="0" edit="1" >
                     <field name="date" readonly="1"/>
                    <field name="employee_id" readonly="1" />
                     <field name="expense_type_id" options="{'no_create': True, 'no_open': True}"  />
                    <field name="name"/>
<!--                    <field name="analytic_account_id" groups="analytic.group_analytic_accounting"/>-->
                     <field name="unit_amount" />
                     <field name="quantity" />
                    <field name="total_amount" sum="Total Amount" widget="monetary"/>
                    <field name="company" groups="kkon_modifications.group_hr_expense_line_manager" />
                    <field name="company_id" invisible="1" />
                    <field name="expense_group_id" readonly="1" />
                    <field name="product_id" string="Expense Type (Account)" groups="account.group_account_user" options="{'no_create': True, 'no_open': True}" />
                    <field name="payment_mode"  invisible="1"  groups="account.group_account_user" />
                     <field name="bank_journal_id" attrs="{'invisible': [('payment_mode', '=', 'own_account')]}" domain="[('type','in',['bank','cash'])]" groups="account.group_account_user"  options="{'no_open': True, 'no_create': True}" />
                    <field name="expense_ref"  groups="account.group_account_user" />
                     <button name="submit_expenses" states="draft" string="Submit" type="object" />
                    <button name="approve_expenses" states="submit" string="Approve" type="object" groups="kkon_modifications.group_hr_expense_line_manager" />

                    <button name="audit_approve" states="audit_approve" string="Audited" type="object" class="oe_highlight" groups="account.group_account_user"  />
                    <field name="posted_date" groups="account.group_account_user" />
                    <button name="action_move_create" states="approve" string="Post" type="object" groups="account.group_account_user" class="oe_highlight"/>
                    <button name="%(hr_expense.hr_expense_refuse_wizard_action)d" states="audit_approve,submit,approve" string="Refuse" type="action"   />
                    <button name="reset_expenses" states="cancel" string="Reset" type="object"  groups="kkon_modifications.group_hr_expense_group_reset" />
                    <field name="refused_msg" readonly="1" />
                    <field name="refused_by" readonly="1" />
                    <field name="refused_date" readonly="1" />
                    <field name="account_move_id" readonly="1" />
                    <field name="state"/>
                </tree>
            </field>
        </record>



