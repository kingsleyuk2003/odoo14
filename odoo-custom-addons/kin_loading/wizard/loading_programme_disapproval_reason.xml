<?xml version="1.0" ?>
<odoo>
    <data>

        <!-- Operations Manager Disapproval -->
        <record id="view_operation_manager_disapproval_reason" model="ir.ui.view">
            <field name="name">Operation Manager Disapproval Reason</field>
            <field name="model">loading.programme.disapproval.wizard</field>
            <field name="arch" type="xml">
                <form string="Disapproval Reason">
                     <p>You are disapprove the Loading Programm. Please enter the Reason for the Disapproval </p>
                    <group>
                        <label for="msg" string="Reason"  />
                        <field nolabel="1" name="msg"/>
                    </group>
                    <footer>
                        <button name="action_om_disapprove" string="Operations Manager Disapprove" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_operation_manager_disapproval_reason" model="ir.actions.act_window">
            <field name="name">Operation Manager Disapproval Reason</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">loading.programme.disapproval.wizard</field>

            <field name="view_mode">form</field>
            <field name="view_id" ref="view_operation_manager_disapproval_reason" />
            <field name="target">new</field>
            <!--<field name="groups_id" eval="[(4,ref('base.group_sale_salesman'))]"/>-->
        </record>



