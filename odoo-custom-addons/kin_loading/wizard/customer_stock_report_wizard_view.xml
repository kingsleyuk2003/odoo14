<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record  id="view_customer_stock_report_wizard" model="ir.ui.view" >
                <field name="name">Customer Stock Report Wizard</field>
                <field name="model">customer.stock.report.wizard</field>
                <field name="arch" type="xml" >
                <form string="Customer Stock Report Wizard" >
                 <strong>This wizard will help generate the loading Programme in .xlsx file</strong>
                     <!--<group col="4" colspan="4" >-->
                         <!--<field name="start_date" />-->
                         <!--<field name="end_date" />-->
                    <!--</group>-->
                    <group col="4" colspan="4" >
                         <field name="partner_id" options="{'no_open':True,'no_create':True}"  />
                        <field name="type" required="1" />
                        <field name="product_ids"  widget="many2many_tags" domain="[('type','=','product')]" options="{'no_open':True,'no_create':True}" />
                    </group>
                        <footer>
                            <button default_focus="1" icon="gtk-execute" name="customer_stock_excel_report" string="Export" type="object"  colspan="2" class="oe_highlight" />
                            or <button special="cancel" class="oe_link"  string="Cancel"  />
                        </footer>
                </form>
             </field>
        </record>

		<record id="action_customer_stock_report_wizard" model="ir.actions.act_window">
            <field name="name">Generate Customer Stock Report</field>
            <field name="res_model">customer.stock.report.wizard</field>

            <field name="view_mode">form</field>
            <field name="view_id" ref="view_customer_stock_report_wizard"/>
            <field name="context">{}</field>
            <field name="type">ir.actions.act_window</field>
            <field name="target">new</field>
        </record>


   </data>
</odoo>
