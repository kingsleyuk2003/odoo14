<?xml version="1.0" ?>
<odoo>
    <data>

        <record id="create_payment_wizard_view" model="ir.ui.view">
            <field name="name">Create Payment Wizard</field>
            <field name="model">create.payment.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Payment"  >
                    <p>Please the following information to post the payment received from the customer</p>
                    <group>
                        <group col="2" >
                            <field name="is_paid_deferred" widget="radio" required="1"   />
                        </group>
                        <group col="2" >
                            <field name="total_amount_paid" readonly="1" />
                            <field name="amount_balance"  readonly="1" />
                        </group>
                    </group>
                    <group col="4"   >
                        <field name="journal_id"  domain="[('type','in',['cash','bank'])]"   options="{'no_create': True, 'no_open': True}" attrs="{'readonly': [('is_eservice_approved', '=', True)], 'required': [('is_paid_deferred', '=', 'paid')], 'invisible': [('is_paid_deferred', '!=', 'paid')]}" />
                        <field  name="payment_date" attrs="{'readonly': [('is_eservice_approved', '=', True)], 'required': [('is_paid_deferred', '=', 'paid')], 'invisible': [('is_paid_deferred', '!=', 'paid')]}" />
                        <field name="amount" attrs="{'readonly': [('is_eservice_approved', '=', True)], 'required': [('is_paid_deferred', '=', 'paid')], 'invisible': [('is_paid_deferred', '!=', 'paid')]}" />
                        <field name="ref"  attrs="{'readonly': [('is_eservice_approved', '=', True)], 'required': [('is_paid_deferred', '=', 'paid')], 'invisible': [('is_paid_deferred', '!=', 'paid')]}" />
                        <field name="is_send_receipt" readonly="1" attrs="{'invisible': [('is_paid_deferred', '!=', 'paid')]}" />
                        <field name="partner_id" invisible="1" />
                        <field name="is_eservice_approved" invisible="1" />
                    </group>
                    <footer>
                        <button name="action_create_payment" string="Approve" type="object" class="oe_highlight"/>
                        or
                        <button string="Close" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_create_payment" model="ir.actions.act_window">
            <field name="name">Create Payment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">create.payment.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>





    </data>
</odoo>
