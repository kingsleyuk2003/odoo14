    </record>


		<record id="user_ticket_intg_user_rule" model="ir.rule">
            <field name="name" >Ticket Helpdesk User finalized</field>
            <field name="model_id" ref="model_kin_ticket"/>
            <field name="groups" eval="[(4, ref('kin_helpdesk.group_helpdesk_user'))]"/>
            <field name="domain_force">[('user_intg_ticket_group_id','in', [g.id for g in user.user_ticket_group_ids])]</field>
            <field name="active" eval="True"/>
        </record>


	<record id="user_ticket_init_user_rule" model="ir.rule">
            <field name="name" >Ticket Helpdesk User Opener</field>
            <field name="model_id" ref="model_kin_ticket"/>
            <field name="groups" eval="[(4, ref('kin_helpdesk.group_helpdesk_user'))]"/>
            <field name="domain_force">[('initiator_ticket_group_id','in', [g.id for g in user.user_ticket_group_ids])]</field>
            <field name="active" eval="True"/>
        </record>

	<record id="user_ticket_maint_user_rule" model="ir.rule">
            <field name="name" >Ticket Helpdesk User Maintenance Close</field>
            <field name="model_id" ref="model_kin_ticket"/>
            <field name="groups" eval="[(4, ref('kin_helpdesk.group_helpdesk_user'))]"/>
            <field name="domain_force">[('user_maint_ticket_group_id','in', [g.id for g in user.user_ticket_group_ids])]</field>
            <field name="active" eval="True"/>
        </record>
	
	  <record id="sale_person_customer_personal_rule" model="ir.rule">
        <field name="name">Personal Sales Person Customers</field>
        <field ref="model_res_partner" name="model_id"/>
        <field name="domain_force">[('user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
    </record>





</data>
</odoo>
